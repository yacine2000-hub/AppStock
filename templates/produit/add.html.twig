
 {% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
      <div class="card-header"><h3 class="text-center font-weight-light my-4">Formulaire Ajout  produit</h3></div>
        <div class="card-body">
        <form action="" method="post" enctype="multipart/form-data">
        {{ form_widget(form._token) }}
            <div class="row mb-3">
                <div class="col-md-12">
                <div class="form-floating mb-3 mb-md-0">
                {{ form_row(form.libelle)}}
                </div>
            </div>
            <div class="form-floating mb-6 mb-md-0">
                {{ form_row(form.stock)}}
             </div>
             <div class="form-floating mb-6 mb-md-0">
                {{ form_row(form.categorie)}}
             </div>
            
        </div>
        <div class="form-group mt-2 ">
            <button class="btn btn-success orange" type="submit" name="submit" id="submit"><i class="fa fa-plane"></i> Envoyer</button>
 </div>
        </form>
</div>
    
{% endblock %}

{% block title %}

{% endblock %}